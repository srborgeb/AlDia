<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlDia.ViewModels"
             x:Class="AlDia.MainPage"
             Title="Al Día - Mis Documentos">

    <Grid RowDefinitions="Auto, *" Padding="20" RowSpacing="10">

        <!-- Formulario de Entrada -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" BackgroundColor="#F0F0F0" Padding="15">
            <Label Text="Nuevo Documento" FontAttributes="Bold" FontSize="18"/>

            <Entry Placeholder="Nombre (Ej: Pasaporte)" Text="{Binding Nombre}" />
            <Entry Placeholder="Número (Opcional)" Text="{Binding Numero}" />

            <Label Text="Fecha de Vencimiento:"/>
            <DatePicker Date="{Binding FechaVencimiento}" />

            <Label Text="Días para avisar antes:"/>
            <Entry Text="{Binding DiasAnticipacion}" Keyboard="Numeric" />

            <Button Text="Guardar Documento" Command="{Binding GuardarCommand}" />
        </VerticalStackLayout>

        <!-- Lista de Documentos -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Documentos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Numero}" TextColor="Gray"/>
                                <Label Text="{Binding FechaVencimiento, StringFormat='Vence: {0:dd/MM/yyyy}'}" TextColor="Red"/>
                            </VerticalStackLayout>

                            <Button Grid.Column="1" 
                                    Text="X" 
                                    BackgroundColor="Red" 
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=EliminarCommand}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
