<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlDia.MainPage">

    <Grid RowDefinitions="*, Auto, Auto" Padding="30">

        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center" Spacing="20">
            <Label Text="Mantente al Día"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"/>

            <Image Source="appicon.png"
                   HeightRequest="200"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Barra de Estado de Sincronización -->
        <VerticalStackLayout Grid.Row="1" Margin="0,0,0,20">
            <Label Text="{Binding EstadoSincronizacion}" 
                   FontSize="12" 
                   HorizontalOptions="Center" 
                   TextColor="Gray"/>
            <ProgressBar Progress="{Binding ProgresoSincronizacion}" 
                         ProgressColor="{StaticResource Primary}" />
        </VerticalStackLayout>

        <!-- Versión de la Aplicación -->
        <Label Grid.Row="2" 
               Text="{Binding VersionApp}" 
               HorizontalOptions="Center" 
               FontSize="10" 
               TextColor="Silver" />
    </Grid>
</ContentPage>