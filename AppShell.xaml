<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AlDia.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AlDia"
    xmlns:views="clr-namespace:AlDia.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Documentos"
        ContentTemplate="{DataTemplate views:PaginaDocumentos}"
        Route="PaginaDocumentos" />

    <ShellContent
        Title="Configuración"
        ContentTemplate="{DataTemplate views:PaginaConfiguracion}"
        Route="PaginaConfiguracion" />

    <!-- Opción de Salir en el Menú Inferior/Lateral -->
    <MenuItem Text="Salir" Clicked="OnExitClicked" IconImageSource="dotnet_bot.png" />

</Shell>